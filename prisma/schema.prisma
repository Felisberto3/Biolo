// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  firstName    String?
  lastName     String?
  userType     String?
  passwordHash String
  imagePath    String?
  bornDate     DateTime?
  posts        Post[] 
  Follower     Follower[]
  Notification Notification[]
}

enum StageEnum {
  sold
  onSell
}

model Post {
  id          Int        @id @default(autoincrement())
  category    String?
  title       String
  description String?
  imagePath   String?
  stage       StageEnum? @default(onSell)
  ocupation   String?
  author      User       @relation(fields: [authorId], references: [id], onDelete: Cascade) 
  authorId    Int
  Dealing     Dealing[]
}

model Dealing {
  id          Int           @id @default(autoincrement())
  posterId    Int
  buyerId     Int
  biolo       Post          @relation(fields: [bioloId], references: [id], onDelete: Cascade)
  bioloId     Int
  DealingTalk DealingTalk[]
}

model DealingTalk {
  id        Int     @id @default(autoincrement())
  content   String
  righterId Int
  imagePath String?
  dealing   Dealing @relation(fields: [dealingId], references: [id], onDelete: Cascade)
  dealingId Int
}

model Follower {
  id         Int  @id @default(autoincrement())
  followerId Int
  user       User @relation(fields: [followedId], references: [id], onDelete: Cascade)
  followedId Int
}

model Notification {
  id          Int    @id @default(autoincrement())
  type        String
  notifiedBy  Int
  user        User   @relation(fields: [recipientId], references: [id], onDelete: Cascade)
  recipientId Int
  postId      Int?
}

model Admin {
  id           Int     @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String
  passwordHash String? @default("12345678")
  type         String  @default("normal")
}

model AdminNotification {
  id          Int    @id @default(autoincrement())
  description String
  acuserId    Int
  acusedId    Int
}
